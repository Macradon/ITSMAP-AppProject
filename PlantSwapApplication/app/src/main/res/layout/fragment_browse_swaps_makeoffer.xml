<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Browse_Swaps_Offer_Cycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Browse_Swaps_Offer_More"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/Browse_Swaps_Offer_Img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Browse_Swaps_Offer_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/Browse_Swaps_Offer_Img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Browse_Swaps_Offer_Img"
        app:layout_constraintTop_toBottomOf="@+id/Browse_Swaps_Offer_Img" />

    <Button
        android:id="@+id/Browse_Swaps_Offer_Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Offer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Browse_Swaps_Offer_Img" />

    <Button
        android:id="@+id/Browse_Swaps_Offer_More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Browse_Swaps_Offer_Send" />

    <Button
        android:id="@+id/Browse_Swaps_Offer_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="Back"
        app:layout_constraintBottom_toTopOf="@+id/Browse_Swaps_Offer_Cycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Browse_Swaps_Offer_More"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Browse_Swaps_Offer_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintEnd_toStartOf="@+id/Browse_Swaps_Offer_More"
        app:layout_constraintStart_toEndOf="@+id/Browse_Swaps_Offer_Back"
        app:layout_constraintTop_toTopOf="@+id/Browse_Swaps_Offer_Back" />

</androidx.constraintlayout.widget.ConstraintLayout>